<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>protostuff-compiler</artifactId>
        <groupId>io.protostuff</groupId>
        <version>0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>protostuff-it</artifactId>
    <name>Protostuff Compiler - Integration Tests</name>

    <build>
        <resources>
            <resource>
                <directory>${project.basedir}/src/main/proto</directory>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>${project.basedir}/src/test/proto</directory>
            </testResource>
            <testResource>
                <directory>${project.build.directory}/generated-test-resources/</directory>
            </testResource>
        </testResources>
        <plugins>
            <plugin>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.8.2</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>io.protostuff</groupId>
                <artifactId>protostuff-maven-plugin</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <id>generate-java-sources</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>java</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>generate-test-java-sources</id>
                        <phase>generate-test-sources</phase>
                        <goals>
                            <goal>st4</goal>
                        </goals>
                        <configuration>
                            <template>${project.basedir}/src/main/stg/io/protostuff/it/extension.stg</template>
                            <extensions>io.protostuff.it.CustomExtensionProvider</extensions>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-documentation</id>
                        <phase>generate-test-resources</phase>
                        <goals>
                            <goal>html</goal>
                        </goals>
                        <configuration>
                            <source>${project.basedir}/src/test/proto</source>
                            <target>${project.build.directory}/generated-test-resources/html</target>
                            <pages>
                                <page>
                                    <name>Index</name>
                                    <file>${project.basedir}/src/test/docs/index.md</file>
                                </page>
                            </pages>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>io.protostuff</groupId>
            <artifactId>protostuff-generator</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>io.protostuff</groupId>
            <artifactId>protostuff-api</artifactId>
            <version>${protostuff.version}</version>
        </dependency>
        <dependency>
            <groupId>io.protostuff</groupId>
            <artifactId>protostuff-core</artifactId>
            <version>${protostuff.version}</version>
        </dependency>
        <dependency>
            <groupId>io.protostuff</groupId>
            <artifactId>protostuff-json</artifactId>
            <version>${protostuff.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-guava</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <dependency>
            <groupId>javax.annotation</groupId>
            <artifactId>javax.annotation-api</artifactId>
            <version>1.3.2</version>
        </dependency>
    </dependencies>
</project>
